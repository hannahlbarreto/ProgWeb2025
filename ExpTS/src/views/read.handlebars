<div class="d-flex justify-content-between">
  <div class="card mb-3" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">{{major.name}}</h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">{{major.code}}</h6>
      <p class="card-text">{{major.description}}</p>
      <a class="btn btn-warning" href="/major/update/{{id}}">Editar</a>
      <a class="btn btn-danger" href="/major/remove/{{id}}">Remover</a>
    </div>
  </div>
  <div>
    <a class="btn btn-primary" href="/major">Voltar</a>
  </div>
</div>